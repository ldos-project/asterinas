{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            // A task to run make check and display errors in the output as problems in vscode.
            "label": "make check",
            "type": "shell",
            "command": "make --keep-going check",
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}